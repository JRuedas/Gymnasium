<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seleccion_datos_planificacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.upm.ipo.gymnasium.seleccion_datos_planificacion">

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/button2"
        android:onClick="ok" />

    <Button
        android:text="X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/button"
        android:onClick="salir"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombre"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombreRutinaEditText"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tvNombre"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Objetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvObjetivo"
        android:textSize="24sp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/nombreRutinaEditText"
        android:layout_alignRight="@+id/tvNombre"
        android:layout_alignEnd="@+id/tvNombre" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/tvObjetivo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="42dp" />

    <TextView
        android:text="Dias/Semana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="25sp"
        android:layout_marginBottom="120dp"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumDias"
        android:textSize="25sp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/nombreRutinaEditText"
        android:layout_alignEnd="@+id/nombreRutinaEditText"
        android:layout_marginTop="47dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />


    <TextView
        android:text="Lunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLunes"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/checkBoxLunes"
        android:layout_alignBottom="@+id/checkBoxLunes"
        android:layout_marginLeft="48dp" />

    <TextView
        android:text="Martes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMartes"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/checkBoxMartes"
        android:layout_alignBottom="@+id/checkBoxMartes"
        android:layout_marginLeft="40dp" />

    <TextView
        android:text="Miercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMiercoles"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/checkBoxMiercoles"
        android:layout_alignBottom="@+id/checkBoxMiercoles"
        android:layout_marginLeft="16dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxLunes"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="100dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxMiercoles"
        android:layout_below="@+id/checkBoxMartes"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxMartes"
        android:layout_below="@+id/checkBoxLunes"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"/>






    <TextView
        android:text="Jueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvJueves"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/checkBoxLunes"
        android:layout_alignBottom="@+id/checkBoxLunes"
        android:layout_marginLeft="160dp" />

    <TextView
        android:text="Viernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvViernes"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/checkBoxMartes"
        android:layout_alignBottom="@+id/checkBoxMartes"
        android:layout_marginLeft="157dp" />

    <TextView
        android:text="Sabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSabado"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/checkBoxMiercoles"
        android:layout_alignBottom="@+id/checkBoxMiercoles"
        android:layout_marginLeft="157dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxJueves"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="220dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxViernes"
        android:layout_below="@+id/checkBoxJueves"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="220dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSabado"
        android:layout_below="@+id/checkBoxViernes"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="220dp"/>


    <TextView
        android:text="Domingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDomingo"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/checkBoxDomingo"
        android:layout_alignBottom="@+id/checkBoxDomingo"
        android:layout_marginLeft="255dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxDomingo"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="330dp" />
</RelativeLayout>
